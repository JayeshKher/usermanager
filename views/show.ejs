<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="w-full h-full bg-zinc-900">
    <div class="main">
      <div class="nav bg-green-800 h-10">
        <ul class="flex justify-center gap-5">
          <li><a href="/">HOME</a></li>
          <li><a href="/Update">UPDATE</a></li>
          <li><a href="/Users">USERS</a></li>
        </ul>
      </div>
      <div class="users p-10 flex flex-wrap gap-3">
        <% users.forEach(user => { %>
          <div class="user max-w-72 bg-zinc-500 p-2 rounded-lg">
            <div class="img w-full bg-red-500 h-52 overflow-hidden rounded-lg">
              <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
            </div>
            <div class="details w-72">
              <h1><%= user.name %></h1>
              <h2><%= user.username %></h2>
            </div>
            <div class="opt flex justify-between mt-2">
              <button class="text-blue-700 bg-blue-950 rounded-lg px-2 py-2"><a href="/Update">Edit</a></button>
              <button class="text-red-700 bg-blue-950 rounded-lg px-2 py-2"><a href="/delete">Delete</a></button>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
